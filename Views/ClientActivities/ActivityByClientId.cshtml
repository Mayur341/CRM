@model IEnumerable<CRM.Models.ClientActivity>

@{
    ViewData["Title"] = "Client Activities";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
   
    <style>
        /* Custom navbar styling */
        body, html {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            font-family: 'Roboto', sans-serif; /* Updated font style */
        }

        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            background-color: #343a40;
        }

        .container {
            padding-top: 0px;
        }

        .navbar-brand {
            color: #fff;
            font-weight: bold;
        }

        .navbar-nav {
            margin: 0 auto;
        }

            .navbar-nav .nav-link {
                color: #fff;
                text-transform: uppercase;
                font-size: 0.9rem;
                font-weight: normal;
                padding: 5px 15px;
                margin: 0 10px;
            }

        .navbar-toggler {
            border-color: #fff;
        }

        .navbar-toggler-icon {
            background-color: #fff;
        }

        html {
            font-size: 14px;
        }

        .btn:focus, .btn:active:focus, .btn-link.nav-link:focus, .form-control:focus, .form-check-input:focus {
            box-shadow: 0 0 0 0.1rem white, 0 0 0 0.25rem #258cfb;
        }

        html {
            position: relative;
            min-height: 100%;
        }

        .client {
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
            font-weight: 110;
        }

        /* Sidebar styling */
        .sidebar {
            height: calc(100% - 49px); /* Adjust height to take navbar into account */
            width: 250px;
            position: fixed;
            top: 49px; /* Offset to be below navbar */
            left: 0;
            background-color: #343a40;
            overflow-x: hidden;
            padding-top: 20px;
            z-index: 1001;
            transition: transform 0.3s ease;
            font-family: 'Open Sans', sans-serif; /* Professional font style */
        }

            .sidebar a {
                padding: 15px 20px;
                text-decoration: none;
                font-size: 1rem;
                color: #fff;
                display: flex;
                align-items: center;
                transition: background-color 0.2s ease;
                font-weight: 600; /* Semi-bold text */
                margin-bottom: 10px; /* Increase space between items */
            }

                .sidebar a i {
                    margin-right: 10px;
                }

                .sidebar a:hover {
                    background-color: #575d63;
                }

        .main-content {
            margin-left: 250px;
            padding: 20px;
            transition: margin-left 0.3s ease;
            margin-top: 50px;
        }

        .toggle-icon {
            display: block;
            font-size: 1.5rem;
            color: black;
            cursor: pointer;
            position: absolute;
            top: 59px; /* Adjust top to be below navbar */
            left: 260px; /* Adjust left to be outside sidebar */
            z-index: 1002;
            transition: left 0.3s ease; /* Smooth transition */
        }

        .sidebar.closed {
            transform: translateX(-100%);
        }

        .main-content.closed {
            margin-left: 0;
        }

        .toggle-icon.closed {
            left: 10px; /* Adjust to the left when sidebar is closed */
        }

        /* Media Queries for responsive design */

    </style>
     
</head>
<body>
    <div class="container">
     <!--   <h3>CLIENT  ACTIVITIES</h3>
        <p>
               <a asp-action="Create"  asp-route-id="@ViewBag.id"  asp-controller="ClientActivities" class="btn btn-primary">Create New</a> -->
        </p>
        <div style="text-align: center; margin-bottom: 20px;">
            <h3 style="font-family: Arial, sans-serif; font-size: 28px; font-weight: bold; color: #333;">
                CLIENT&nbsp;ACTIVITIES
            </h3>
        </div>
        <table id="myTable" class="table table-bordered table-striped mt-4">
            <thead class="thead-dark">
                <tr>
                    <th>
                        CLIENT NAME
                    </th>
                    <th>
                       ACTIVITY TYPE
                    </th>
                    <th>
                        DESCRIPTION
                    </th>
                    <th>
                        DATE
                    </th>
                    
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Client.ClientName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Activity_Type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Activity_Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Activity_Date)
                        </td>
                       
                        <td class="actions">
                            <a asp-action="Edit" asp-route-id="@item.clientActivityID" class="btn btn-sm btn-secondary">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.clientActivityID" class="btn btn-sm btn-info">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.clientActivityID" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
