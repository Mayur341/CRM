@model IEnumerable<CRM.Models.ClientActivity>

@{
    ViewData["Title"] = "Client Activities";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            color: #343a40;
            
        }

        .navbar {
            margin-bottom: 0; /* Remove margin from the bottom of the navbar */
        }





        h3{
            margin-top:0;
        }

        h1 {
            color: #003153; /* Prussian blue */
            font-weight: bold;
        }

        .table th {
            color: #003153; /* Prussian blue */
            font-weight: bold;
        }

        .btn-primary {
            background-color: #003153; /* Prussian blue */
            border-color: #003153; /* Prussian blue */
        }

            .btn-primary:hover {
                background-color: #002b48; /* Darker shade of Prussian blue */
                border-color: #002b48; /* Darker shade of Prussian blue */
            }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
                border-color: #545b62;
            }

       <!-- .actions a {
            margin-right: 5px;
        } -->

        


    </style>
</head>
<body>
    <div class="container">
     <!--   <h3>CLIENT  ACTIVITIES</h3>
        <p>
               <a asp-action="Create"  asp-route-id="@ViewBag.id"  asp-controller="ClientActivities" class="btn btn-primary">Create New</a> -->
        </p>
        <div style="text-align: center; margin-bottom: 20px;">
            <h3 style="font-family: Arial, sans-serif; font-size: 28px; font-weight: bold; color: #333;">
                CLIENT&nbsp;ACTIVITIES
            </h3>
        </div>
        <table id="myTable" class="table table-bordered table-striped mt-4">
            <thead class="thead-dark">
                <tr>
                    <th>
                        CLIENT NAME
                    </th>
                    <th>
                       ACTIVITY TYPE
                    </th>
                    <th>
                        DESCRIPTION
                    </th>
                    <th>
                        DATE
                    </th>
                    
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Client.ClientName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Activity_Type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Activity_Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Activity_Date)
                        </td>
                       
                        <td class="actions">
                            <a asp-action="Edit" asp-route-id="@item.clientActivityID" class="btn btn-sm btn-secondary">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.clientActivityID" class="btn btn-sm btn-info">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.clientActivityID" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
