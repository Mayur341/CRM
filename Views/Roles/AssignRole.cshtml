@{
}
@{
    ViewBag.Title = "Assign Role";
    var userId = ViewBag.UserId;
    var userRoles = ViewBag.UserRoles as List<string>;
    var allRoles = ViewBag.AllRoles as List<string>;
}

<h1>Assign Role</h1>

<div>
    <h4>User ID: @userId</h4>
    <h4>Current Roles:</h4>
    <ul>
        @foreach (var role in userRoles)
        {
                <li>@role</li>
        }
    </ul>
</div>

<div>
    <h4>Assign Role</h4>
    <form asp-action="AssignRole">
        <div class="form-group">
            <label for="roleName">Select Role:</label>
            <select class="form-control" id="roleName" name="roleName">
                @foreach (var role in allRoles)
                {
                        <option value="@role">@role</option>
                }
            </select>
        </div>
        <input type="hidden" name="userId" value="@userId" /> <!-- Hidden field to pass userId -->
        <button type="submit" class="btn btn-primary">Assign Role</button>
    </form>
</div>

@if (!ViewData.ModelState.IsValid)
{
        <div class="alert alert-danger mt-3">
            <strong>Error:</strong> @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        </div>
}
