@model CRM.Models.Client

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            color: #343a40;
            margin-top: 20px; /* Adjust margin from top */
        }

        h1, h4 {
            color: #003153; /* Prussian blue */
            font-weight: bold;
        }

        .form-group label, .row dt {
            font-weight: bold;
            color: #003153; /* Prussian blue */
        }

        .form-control, .row dd {
            border: 1px solid #ced4da;
            box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1); /* Shadow around input fields */
        }

        .btn-primary {
            background-color: #003153; /* Prussian blue */
            border-color: #003153; /* Prussian blue */
        }

            .btn-primary:hover {
                background-color: #002b48; /* Darker shade of Prussian blue */
                border-color: #002b48; /* Darker shade of Prussian blue */
            }

        .text-danger {
            color: red;
        }

        .actions {
            margin-top: 20px; /* Adjust margin from top */
        }

            .actions .btn-secondary {
                background-color: #6c757d;
                border-color: #6c757d;
            }

                .actions .btn-secondary:hover {
                    background-color: #5a6268;
                    border-color: #545b62;
                }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0 text-center">Add Your Query</h5>
                    </div>
                    <div class="card-body client">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="ClientName" class="font-weight-bold">Name</label>
                                <input asp-for="ClientName" class="form-control" />
                                <span asp-validation-for="ClientName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Date" class="font-weight-bold">Date</label>
                                <input asp-for="Date" class="form-control" />
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Subject" class="font-weight-bold">Subject</label>
                                <input asp-for="Subject" class="form-control" />
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="OrganizationName" class="font-weight-bold">Organization</label>
                                <input asp-for="OrganizationName" class="form-control" />
                                <span asp-validation-for="OrganizationName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="MobileNumber" class="font-weight-bold">Contact</label>
                                <input asp-for="MobileNumber" class="form-control" />
                                <span asp-validation-for="MobileNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="font-weight-bold">Email</label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SourceID" class="font-weight-bold">Source</label>
                                <select asp-for="SourceID" class="form-control" asp-items="ViewBag.SourceID"></select>
                            </div>
                            <div class="text-center mb-3">
                                <button type="submit" class="btn btn-dark text-white">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-3 text-center">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
