@model CRM.Models.Client

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background: radial-gradient( rgba(0, 0, 0, 0.2), transparent);
            
         }
         .client-container{

           background-color:whitesmoke;
           box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);

         }

         span{
             font-family:14px;
             font-color:black;
             font-weight:bold;
         }



        .client-container dt {
             font-family: 'Arial', sans-serif;
            font-size: 12px !important;
            color:black#55585a !important;
            font-weight:bold;
            margin-bottom: 10px;
        }


         .client-container dd {
            font-family: 'Arial', sans-serif;
            font-size: 12px !important;
            color: black !important;
            margin-bottom: 10px;
        }
         
         .client-container{
             padding:10px;
         }
         
         
         
         
         
         
         
         
         
         
         
         h1, h4, h5 {
            color: #003153; /* Prussian blue */
            font-weight: bold;
        }

        .form-group label, .row dt {
            font-weight: bold;
            color: #003153; /* Prussian blue */
        }

        

        .btn-primary {
            background-color: #003153; /* Prussian blue */
            border-color: #003153; /* Prussian blue */
        }

            .btn-primary:hover {
                background-color: #002b48; /* Darker shade of Prussian blue */
                border-color: #002b48; /* Darker shade of Prussian blue */
            }

        .btn-danger {
            background-color: #dc3545; /* Red color for delete button */
            border-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #c82333; /* Darker red */
                border-color: #bd2130;
            }

        .text-danger {
            color: red;
        }

        .actions {
            margin-top: 20px; /* Adjust margin from top */
        }

            .actions .btn-secondary {
                background-color: #6c757d;
                border-color: #6c757d;
            }

                .actions .btn-secondary:hover {
                    background-color: #5a6268;
                    border-color: #545b62;
                }

        .mb-3 .btn {
            margin-right: 10px; /* Add margin between buttons */
        }

        .card-header {
            background-color: #003153; /* Prussian blue */
            color: white;
        }

        th {
            font-weight: bold;
            color: #003153; /* Prussian blue */
        }

        .table td, .table th {
            border: 1px solid #ced4da;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

            .btn-success:hover {
                background-color: #218838;
                border-color: #1e7e34;
            } */


    </style>
</head>
<body>

    <div class="client-container">
        <div>
            <span>Client Details</span>
            <hr />

            <h4>Company Name : <span class="style:text-bold">@Model.OrganizationName</span></h4>
            <dl class="row">
                <dt class="col-sm-2">
                    Client Id
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ClientID)
                </dd>
                <dt class="col-sm-2">
                    Client Name
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ClientName)
                </dd>
                <dt class="col-sm-2">
                    Date
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Date)
                </dd>
                <dt class="col-sm-2">
                    Subject
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Subject)
                </dd>
                <dt class="col-sm-2">
                    Organization 
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.OrganizationName)
                </dd>
                <dt class="col-sm-2">
                    Mobile No
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.MobileNumber)
                </dd>
                <dt class="col-sm-2">
                    Email
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-2">
                   Source
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Source.SourceName)
                </dd>
                <dt class="col-sm-2">
                    Client Status
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ClientStatus.StageName)
                </dd>
            </dl>
        </div>
        <div class="actions d-flex">
            <a asp-action="Edit" asp-route-id="@Model?.ClientID" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
