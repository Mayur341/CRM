@{
    ViewBag.Title = "Assign Sales Representative";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
            font-size: 14px;
        }

        .main-container {
            max-width: 100%;
            padding: 20px;
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        h5 {
            margin-top: 0;
            color: #333;
            font-weight: bold;
            text-align: left; /* Align to the left */
            font-size: 18px;
            margin-bottom: 20px; /* Added margin bottom for spacing */
        }

        .client-details {
            padding: 20px;
            background-color: #f0f0f0;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-bottom: 20px;
            font-size: 12px; /* Adjusted font size to 12px */
        }

            .client-details h4 {
                margin-top: 0;
                margin-bottom: 10px;
                color: #007bff;
                font-size: 16px; /* Kept heading font size at 16px */
            }

            .client-details p {
                margin-bottom: 5px;
                font-size: 12px; /* Adjusted paragraph font size to 12px */
            }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
            color: #333;
        }

        select.form-control {
            width: 100%;
            height: 38px;
            font-size: 14px;
            border: 1px solid #ced4da;
            border-radius: 4px;
        }

        .btn-primary {
            background-color: #007bff;
            border: 1px solid #007bff;
            color: #fff;
            font-weight: bold;
            padding: 8px 16px;
            border-radius: 4px;
            font-size: 14px;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }
    </style>
</head>
<body>

    <div class="main-container">
        <h5>Assign sales representative</h5>

        <div class="client-details">
            <h4>Client Details</h4>
            <p><strong>Client Name</strong> @ViewBag.ClientName</p>
            <p><strong>Email</strong> @ViewBag.ClientEmail</p>
        </div>

        <form asp-action="ManagerAssign" method="post">
            <div class="form-group">
               
                <select name="selectedSalesRepresentativeId" class="form-control">
                    <option value="">Select Sales Representative</option>
                    @foreach (var representative in (List<SelectListItem>)ViewBag.SalesRepresentatives)
                    {
                        <option value="@representative.Value">@representative.Text</option>
                    }
                </select>
            </div>

            <input type="hidden" name="clientId" value="@ViewBag.ClientId" />

            <button type="submit" class="btn btn-primary">Assign</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
