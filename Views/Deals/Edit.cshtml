 @model CRM.Models.Deal

<!DOCTYPE html>
<html>
<head>
    <title>Deal Details</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

    <div class="container">
        <h1>Deal Details</h1>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Model.deal_name</h5>
                <p class="card-text">@Model.deal_description</p>
                <p class="card-text">Deal Date: @Model.deal_date</p>
                <p class="card-text">Total Amount: @Model.Total_Amount</p>
                <p class="card-text">Amount Received: @Model.amount_received</p>
                <p class="card-text">Pending Amount: @Model.pending_amount</p>
                <p class="card-text">Closing Date: @Model.closing_date</p>
                <p class="card-text">Description: @Model.description</p>
                <p class="card-text">Product Name: @Model.product_name</p>
                <p class="card-text">Client ID: @Model.Client.ClientID</p>
            </div>
        </div>

        <div class="mt-3">
            <button type="button" class="btn btn-primary btn-sm" onclick="loadForm()">Add Amount</button>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="addAmountModal" tabindex="-1" role="dialog" aria-labelledby="addAmountModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addAmountModalLabel">Add Amount</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="formContainer">
                    <!-- Form will be loaded here -->
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        function loadForm() {
            $('#formContainer').load('@Url.Action("Create", "Transactions", new { id = Model?.deal_id })');
            $('#addAmountModal').modal('show');
        }

        function submitForm() {
            // Handle form submission here
            $('#addAmountModal').modal('hide');
        }
    </script>

</body>
</html>
