@model CRM.Models.Deal

@{
    ViewData["Title"] = "Edit Deal";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            color: #343a40;
            margin-top: 20px; /* Adjust margin from top */
        }

        h1, h4 {
            color: #003153; /* Prussian blue */
            font-weight: bold;
        }

        .form-group label {
            font-weight: bold;
            color: #003153; /* Prussian blue */
        }

        .form-control {
            border: 1px solid #ced4da;
            box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1); /* Shadow around input fields */
        }

        .btn-primary {
            background-color: #003153; /* Prussian blue */
            border-color: #003153; /* Prussian blue */
        }

            .btn-primary:hover {
                background-color: #002b48; /* Darker shade of Prussian blue */
                border-color: #002b48; /* Darker shade of Prussian blue */
            }

        .text-danger {
            color: red;
        }
    </style>
</head>
<body>

    <div class="container">

        <hr />
        <div class="row">
            <div class="col-md-8">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="deal_id" />

                    <div class="form-group">
                        <label asp-for="ClientID" class="control-label">Client ID</label>
                        <input id="ClientID" name="ClientID" class="form-control" value="@ViewBag.ClientID" readonly />
                    </div>

                    <div class="form-group">
                        <label asp-for="deal_name" class="control-label">Deal Name</label>
                        <input asp-for="deal_name" class="form-control" />
                        <span asp-validation-for="deal_name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="deal_description" class="control-label">Deal Description</label>
                        <input asp-for="deal_description" class="form-control" />
                        <span asp-validation-for="deal_description" class="text-danger"></span>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="deal_date" class="control-label">Deal Date</label>
                            <input asp-for="deal_date" class="form-control" />
                            <span asp-validation-for="deal_date" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="closing_date" class="control-label">Closing Date</label>
                            <input asp-for="closing_date" class="form-control" />
                            <span asp-validation-for="closing_date" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Total_Amount" class="control-label">Total Amount</label>
                        <input asp-for="Total_Amount" class="form-control" />
                        <span asp-validation-for="Total_Amount" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="amount_received" class="control-label">Amount Received</label>
                        <input asp-for="amount_received" class="form-control" />
                        <span asp-validation-for="amount_received" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="pending_amount" class="control-label">Pending Amount</label>
                        <input asp-for="pending_amount" class="form-control" />
                        <span asp-validation-for="pending_amount" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="description" class="control-label">Description</label>
                        <textarea asp-for="description" class="form-control"></textarea>
                        <span asp-validation-for="description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="product_name" class="control-label">Product Name</label>
                        <input asp-for="product_name" class="form-control" />
                        <span asp-validation-for="product_name" class="text-danger"></span>
                    </div>

                    <div class="form-group d-flex justify-content-center align-items-center ">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }
    </script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>
