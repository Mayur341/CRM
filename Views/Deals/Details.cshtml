@model CRM.Models.Deal

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .container {
            padding-right: 0px;
            padding-left: 0px;
        }

        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            color: #343a40;
            background: radial-gradient( rgba(0, 0, 0, 0.2), transparent);
            margin: 0;
            padding: 0;
            height: 100vh;
        }

        h1, h4 {
            color: #003153; /* Prussian blue */
            font-weight: bold;
        }

        .form-group label, .row dt , .row dd {
            font-weight: bold;
            color: #003153; /* Prussian blue */
        }

        .form-control, .row dd {
            border: 1px solid #ced4da;
            box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1); /* Shadow around input fields */
        }

        .btn-primary {
            background-color: #003153; /* Prussian blue */
            border-color: #003153; /* Prussian blue */
        }

            .btn-primary:hover {
                background-color: #002b48; /* Darker shade of Prussian blue */
                border-color: #002b48; /* Darker shade of Prussian blue */
            }

        .text-danger {
            color: red;
        }

        .actions {
            margin-top: 20px; /* Adjust margin from top */
        }

            .actions .btn-secondary {
                background-color: #6c757d;
                border-color: #6c757d;
            }

                .actions .btn-secondary:hover {
                    background-color: #5a6268;
                    border-color: #545b62;
                }

        .heading {
            background-color: whitesmoke;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 20px;
        }

            .heading span {
                font-size: 14px;
                font-weight: bold;
            }

        .heading-btn .btn {
            margin-right: 5px;
        }

        .middle {
            display: flex;
            flex-wrap: wrap;
            margin: 20px 20px;
            justify-content: center;
        }

        .symbol, .c-info, .info {
            background-color: whitesmoke;
            padding: 20px;
            margin: 10px;
            flex: 1;
            min-width: 300px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .symbol {
            text-align: center;
        }

        .info {
            margin: 30px 30px;
        }

        .company-name span {
            font-size: 14px;
            font-weight: bold;
        }
        /* Define a custom class for the button */
        .btn-custom {
            background-color: #008094; /* Set the background color */
            padding: 5px 10px; /* Adjust padding for smaller size */
        }


        .lead-details-list dt, .lead-details-list dd {
            font-size: 12px;
            color: #55585a;
            margin-bottom: 10px;
        }

        .image-container {
            margin-top: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .image-container img {
                width: 45px;
                height: auto;
            }

        .view-btn .btn {
            background-color: #328491;
        }

        .main-container {
            width: 100%;
            border: 1px solid rgba(0, 0, 0, 0.2); /* Faint border */
            border-radius: 5px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3); /* Faint black shadow */
            background: linear-gradient(to bottom right, rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.03)); /* Gradient effect */
            margin-top: 0px;
            border-radius:13px;
        }

       
    </style>
</head>
<body>

    <div class="container main-container">
        <div class="heading">
            <span>Deal Information</span>
            <div class="heading-btn">

                @if (Model.Client == null)
                {
                    <a asp-controller="Leads" asp-action="Create" asp-route-id="@Model.Client.ClientID" class="btn btn-custom btn-sm btn-primary ml-2" style="background-color: #dc3545;">
                        <i class="fas fa-plus mr-1" style="font-size: 12px;"></i><span style="font-size: 12px; color: white;">Convert to Lead</span>
                    </a>
                }
                else
                {
                    <a asp-controller="Leads" asp-action="Details" asp-route-id="@Model.Client.Lead" class="btn btn-custom btn-sm btn-primary ml-2" style="background-color: #dc3545;">
                        <i class="fas fa-eye mr-1" style="font-size: 12px;"></i><span style="font-size: 12px; color: white;">View Lead</span>
                    </a>
                }



                <a asp-controller="Deals" asp-action="Edit" asp-route-id="@Model.deal_id" class="btn btn-sm text-white" title="Edit">
                    <i class="fas fa-edit"></i>Edit
                </a>
                <a asp-controller="Deals" asp-action="Delete" asp-route-id="@Model.deal_id" class="btn btn-custom btn-sm  bg-danger text-white" title="Remove">
                    <i class="fas fa-trash mr-1 " style="font-size: 12px;"></i><span style="font-size: 12px;">Remove</span>
                </a>
            </div>
        </div>

        <div class="middle row">
            <div class="symbol col-md-4">
                <div class="image-container">
                    <img src="/images/final.jpg" class="img-fluid" alt="User Image">
                </div>
                <div class="company-name mt-2">
                    <span>@Model.Client.OrganizationName</span><br>
                    <span style="font-size: 10px;">CLIENT NUMBER : @Model.Client.ClientID</span>
                </div>
                <div class="view-btn mt-2">
                    <a asp-controller="Client" asp-action="Details" asp-route-id="@Model.Client.ClientID" class="btn btn-custom btn-sm text-white" title="View">
                        <i class="fas fa-eye mr-1" style="font-size: 12px;"></i><span style="font-size: 12px;">View</span>
                    </a>
                </div>
            </div>

            <div class="c-info col-md-8">
                <div class="table">
                    <dl class="row lead-details-list">
                        <dt class="col-sm-4">Client Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Client.ClientName)</dd>
                        <dt class="col-sm-4">Client Mobile No</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Client.MobileNumber)</dd>
                        <dt class="col-sm-4">Client Email Id</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Client.Email)</dd>
                        <dt class="col-sm-4">Client Source</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Client.Source.SourceID)</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="info">
            <div class="table">
                <dl class="row lead-details-list">
                    <dt class="col-sm-4">Deal ID</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.deal_id)</dd>
                    <dt class="col-sm-4">Deal Name</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.deal_name)</dd>
                    <dt class="col-sm-4">Product Name</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.product_name)</dd>
                    <dt class="col-sm-4">Deal Description</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.deal_description)</dd>
                    <dt class="col-sm-4">Closing Date</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.closing_date)</dd>
                    <dt class="col-sm-4">Total Amount</dt>
                    <dd class="col-sm-8">₹@Html.DisplayFor(model => model.Total_Amount)</dd>
                    <dt class="col-sm-4">Amount Received</dt>
                    <dd class="col-sm-8">₹@Html.DisplayFor(model => model.amount_received)</dd>
                    <dt class="col-sm-4">Pending Amount</dt>
                    <dd class="col-sm-8">₹@Html.DisplayFor(model => model.pending_amount)</dd>
                </dl>
            </div>
            <div class="actions d-flex justify-content-lg-end">
                <a asp-action="Edit" asp-route-id="@Model?.deal_id" class="btn btn-custom btn-sm btn-primary action-button">
                    <i class="fas fa-edit mr-1" style="font-size: 12px;"></i><span style="font-size: 12px;">Edit</span>
                </a>
                <a asp-action="Index" class="btn btn-custom btn-sm btn-secondary ml-2 action-button">
                    <i class="fas fa-list mr-1" style="font-size: 12px;"></i><span style="font-size: 12px;">Back to List</span>
                </a>
                <button type="button" class="btn btn-primary btn-custom btn-sm ml-2 action-button" onclick="loadForm()">
                    <i class="fas fa-plus mr-1" style="font-size: 12px;"></i><span style="font-size: 12px;">Add Amount</span>
                </button>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    
      

</body>
</html>
