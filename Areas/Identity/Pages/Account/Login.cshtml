@page
@model LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: rgba(0, 0, 0, 0.1); /* Changed background color to black */
            font-family: Arial, sans-serif;
            font-size: 14px; /* Smaller font size */
        }
        .container{

            margin-top:100px;

        }



        .login-container {
            max-width: 500px;
            margin: auto;
            padding: 30px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.1);
        }

            .login-container h2 {
                text-align: center;
                margin-bottom: 20px; /* Reduced margin */
                font-size: 1.5rem; /* Smaller font size */
            }

            .login-container h5 {
                text-align: center;
                margin-bottom: 15px; /* Reduced margin */
                font-size: 1rem; /* Smaller font size */
            }

        .form-floating {
            position: relative;
            margin-bottom: 15px; /* Reduced margin */
        }

            .form-floating input {
                width: 100%;
                padding: 8px; /* Reduced padding */
                font-size: 14px; /* Smaller font size */
                border: 1px solid #ced4da;
                border-radius: 5px;
            }

            .form-floating label {
                position: absolute;
                top: 50%;
                left: 10px;
                transform: translateY(-50%);
                padding: 0 5px;
                background-color: #fff;
                color: #999;
                transition: top 0.3s, font-size 0.3s;
                cursor: text;
                font-size: 14px; /* Smaller font size */
            }

            .form-floating input:focus + label,
            .form-floating input:not(:placeholder-shown) + label {
                top: 0;
                font-size: 12px; /* Smaller font size */
            }

        .checkbox {
            margin-bottom: 15px; /* Reduced margin */
        }

        .btn-login {
            width: 100%;
            padding: 10px; /* Reduced padding */
            font-size: 16px; /* Smaller font size */
            border-radius: 5px;
            background-color: #007bff;
            color: #fff;
            border: none;
            cursor: pointer;
        }

            .btn-login:hover {
                background-color: #0056b3;
            }

        .other-services {
            margin-top: 20px;
            text-align: center;
        }

            .other-services .btn {
                margin-bottom: 10px;
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="login-container">
                    <h2>LOG HERE !!</h2>
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder=" ">
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder=" ">
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input class="form-check-input" asp-for="Input.RememberMe">
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                        <div class="text-center">
                            <button id="login-submit" type="submit" class="btn btn-login bg-success">Log in</button>
                        </div>
                    </form>
                    <div class="other-services">
                        <h5>Use Other Services</h5>
                        @{
                            if ((Model.ExternalLogins?.Count ?? 0) == 0)
                            {
                                <div>
                                    <p>There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">article about setting up this ASP.NET application to support logging in via external services</a>.</p>
                                </div>
                            }
                            else
                            {
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                    <div>
                                        @foreach (var provider in Model.ExternalLogins!)
                                        {
                                            <button type="submit" class="btn btn-success" name="provider" value="@provider.Name" title="microsoft">@provider.DisplayName</button>
                                        }
                                    </div>
                                </form>
                            }
                        }
                    </div>
                    <div class="text-center mt-3">
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
